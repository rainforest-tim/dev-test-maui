<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:GeoDraw.App.ViewModels"
             x:Class="GeoDraw.App.MainPage"
             x:DataType="viewmodel:MainPageViewModel">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label
                Text="Your word to draw is:"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />
            
            <Label
                Text="{Binding SelectedObject}"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2" />

            <!--TODO: Canvas drawing-->

            <Button
                x:Name="ButtonSend"
                Text="Send Drawing" 
                SemanticProperties.Hint="Send drawing"
                Clicked="OnSendClicked"
                HorizontalOptions="Fill" />


            <Button
                x:Name="ButtonClear"
                Text="Clear Drawing" 
                SemanticProperties.Hint="Clear drawing"
                Clicked="OnClearClicked"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
